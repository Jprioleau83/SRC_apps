<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:paddingBottom="5dp"
    android:background="@drawable/abc_list_selector_holo_dark">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Title Of Song-->
        <TextView
            android:id="@+id/mos_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="MOS Number:"
            android:textColor="#fff"
            android:typeface="sans"
            android:textSize="10dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payscale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="1234"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:typeface="sans"
            android:textSize="10dip" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"


            >
            <!-- Artist Name -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="10dip"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="@string/MOSTitle"
                android:textAlignment="center"
                android:textStyle="" />

            <TextView
                android:id="@+id/rank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="15dip"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Just gona stand there and ..."
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="10dip"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="@string/MOSRank"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/rank_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="15dip"
                android:layout_marginTop="1dip"
                android:text="Just gona stand there and ..."
                android:textStyle="bold"
                android:shadowColor="@android:color/black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/mos_link"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="15dip"
                android:layout_marginTop="1dip"
                android:text=""
                android:textStyle="bold"
                android:shadowColor="@android:color/black"
                android:textAlignment="center" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>